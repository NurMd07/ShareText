<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Share Text</title>

    <link
      rel="stylesheet"
      href="/bootstrap/bootstrap_4.0.min.css"

    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Gabarito:wght@600&display=swap"
      rel="stylesheet"
    />
    <link
    href="/css/login/login.css"
    rel="stylesheet"
  />
  </head>
  <body>
    <div class="container-fluid">

      <div class="row justify-content-md-around mt-0 mt-md-3">
        <!-- first column -->

        <div
          class="col-12 col-md-3 col-lg-3 main-heading mb-3 mb-md-0 d-flex justify-content-center align-items-start"
        >
          <div class="heading d-flex justify-content-center align-items-center">
            <img class="main-img" src="images/copy.png" alt="Not Found" />
            <h1 class="sub-heading">Share Text</h1>
          </div>
        </div>

        <!-- Second column -->

        <div class="col-12 col-md-5 col-lg-4 login-box mb-4 ml-md-5 mr-md-3 middle-box" >

          <div class="col-lg-12 login-key">
            <i class="fa fa-key" aria-hidden="true"></i>
          </div>

          <div class="col-lg-12 login-title">Login</div>

          <div class="col-lg-12 login-form">

            <div class="col-lg-12 login-form">

              <form
                method="POST"
                action="/login"
                class="form1"
                onsubmit="return validateForm()"
              >
                <div class="form-group">
                  <label class="form-control-label">EMAIL / USERNAME</label>
                  <input
                    name="username"
                    type="text"
                    class="form-control inp1"
                    required
                  />
                </div>
                <div class="form-group">
                  <label class="form-control-label">PASSWORD</label>
                  <input
                    name="password"
                    type="password"
                    class="form-control inp2"
                    required
                  />
                </div>

                <div class="col-lg-12 loginbttm">
                  <div
                    class="col-lg-7 login-btm login-text"
                    style="font-size: 0.8em"
                  >
                    <!-- Error Message --><% if(error){ %> <%= error %> <% } %>
                  </div>
                  <div class="col-lg-5 login-btm login-button">
                    <button type="submit" class="btn btn-outline-primary s1">
                      LOGIN <span class="load"></span>
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Third column -->

        <div
          class="col-12 col-md-2 col-lg-3 mx-lg-5 p-md-4 p-lg-4 mb-3 mb-md-0 login-box lb1"
          style="height: fit-content"
        >
          <p
            style="
              text-decoration: underline;
              text-underline-offset: 0.5em;
              color: white;
              line-height: 2.5em;
            "
            class="mb-1 mb-lg-2"
          >
            <span style="opacity: 0.9"> Need an account ? </span>
            <span class="d-inline-block m-2 btn btn-sm btn-success su1"
              >Register</span
            >
          </p>
          <div class="forgot mb-3 mb-md-2">
            <p
              class="btn btn-sm btn-outline-primary su2 my-2 my-md-1"
              style="font-size: 0.6em !important"
            >
              Forgot your password?
            </p>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/login/login.js">
    </script>
  </body>
</html>
