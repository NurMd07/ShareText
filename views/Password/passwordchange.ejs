</style>
</head>
<body>
    
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <div class="heading">
            <img class="main-img " src="/images/copy.png" alt="Not Found" />
            <h1 class="sub-heading">Share Text</h1>
            </div>
      
      </a>
         
      <a href="/login" class="btn btn-primary">Login</a>
         
          </div>
        </div>
      </nav>

<div class="container">

<div class="row">
  
  <div class="col-md-6 col-lg-5  mx-auto login-box g-0 ">
    
        <form class="form1" method="POST" action="/forgot-password/<%= token%>" >
          <div class="form-heading">
            <p class="ps-4 mx-auto"> Change Password <span class="ms-5" style="font-size: 0.5em;opacity: 0.5;"> (<%= email %>)</span></p>
           </div>
            <div class="form-group">
             
                <label class="form-control-label d-block contain-i3 mt-5" style="text-align: left !important;">New Password:</label>
               <div class="contain-i3"> <input name="text" type="text" class="form-control i3" required></div> 
               <label class="form-control-label d-block contain-i3 " style="text-align: left !important;">Confirm Password:</label>
               <div class="contain-i3"> <input name="password" type="password" class="form-control i3" required></div> 
            </div>
            <div class="row g-0 me-2 mt-3">

            <div class="col-8 ms-2">
              <p class="ps-5 info-text" style="font-size:0.8em;color:#FFFF99"></p>
            </div>
            <div class="col-3 login-btm login-button ">
              <button type="submit" class="btn btn-outline-primary btn2">Submit</button>
            </div>
            
          </div>
        </form>
  
</div>
</div>


</div>


    <script src="/bootstrap/bootstrap.bundle.min.js"></script>

    <script>
      
const infoText =  document.querySelector('.info-text');
document.querySelector('.form1').addEventListener('submit', function (e) {
 
  e.preventDefault();


  const newPassword = document.querySelector('[name="text"]').value;
  const confirmPassword = document.querySelector('[name="password"]').value;


  if (newPassword.length >= 6 && newPassword === confirmPassword) {
   
    infoText.textContent = ''; 
  
    this.submit();
 
  } else {
 
    infoText.textContent = "Passwords must be at least 6 characters long and must match.";

  }
});


    </script>
</body>
</html>